{
  "compilerOptions": {
    "lib": ["es2017", "dom", "ESNext"],
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@common/*": ["./common/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
